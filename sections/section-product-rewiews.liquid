<style>
    #shopify-section-{{ section.id }} {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
        background-color: {{ section.settings.bg }};
    }
    .section-product-reviews__title {
        text-align: center;
    }
</style>
{% if section.settings.product != blank %}
<div class="section-product-reviews container">
    <div class="section-product-reviews__title">{{ section.settings.text }}</div>
    <div id="shopify-product-reviews" data-id="{{ section.settings.product.id }}">{{ section.settings.product.metafields.spr.reviews }}</div>
</div>
{% endif %}

{% schema %}
{
    "name": "Product Reviews",
    "settings": [
        {
            "type": "color",
            "id": "bg",
            "label": "Background color"
        },
        {
            "type": "range",
            "id": "padding_top",
            "label": "Paddind top",
            "min": 0,
            "max": 200,
            "step": 2,
            "unit": "px",
            "default": 60
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "label": "Paddind bottom",
            "min": 0,
            "max": 200,
            "step": 2,
            "unit": "px",
            "default": 60
        },
        {
            "type": "richtext",
            "id": "text",
            "label": "Title text"
        },
        {
            "type": "product",
            "id": "product",
            "label": "Product"
        }
    ],
    "presets": [
        {
            "name": "Product Reviews"
        }
    ]
}
{% endschema %}