<div class="section-slider">
        <div class="swiper mySwiper" >
            <div class="swiper-wrapper">
              {% for block in section.blocks %}
                <div class="swiper-slide" style="background:{{block.settings.bg}}">
                 <div class="container">
                    <div class="left">
                        <div class="left__wrap">
                          <div class="image">
                            <div class="image__body">
                              <img src="{{block.settings.img | img_url: 'master'}}" alt="">
                            </div>
                          </div>
                        </div>
                      </div>
                      <div class="right">
                        <div class="right__wrap">
                          <div class="name">
                            <span style="color:{{block.settings.color_text}};">
                              {{ block.settings.name }}
                            </span>
                          </div>
                          <div class="title">
                            <h2 style="color:{{block.settings.color_text}};">
                              {{ block.settings.title }}
                            </h2>
                          </div>
                          <div class="text" style="color:{{block.settings.color_text}} !important;">
                            {{ block.settings.text }}
                          </div>
                          <div class="slide-btn">
                            <a href="{{block.settings.url}}" class="btn">
                              {{ block.settings.btn_name }}
                              <svg
                                width="18"
                                height="6"
                                viewBox="0 0 18 6"
                                fill="none"
                                xmlns="http://www.w3.org/2000/svg">
                                <path d="M13.6561 6C13.9162 5.45299 14.1676 4.97436 14.4104 4.5641C14.6705 4.15385 14.922 3.81197 15.1647 3.53846H0V2.46154H15.1647C14.922 2.17094 14.6705 1.82051 14.4104 1.41026C14.1676 1 13.9162 0.529914 13.6561 0H14.5665C15.659 1.24786 16.8035 2.17094 18 2.76923V3.23077C16.8035 3.81196 15.659 4.73504 14.5665 6H13.6561Z" fill="#3B4E15" />
                              </svg>
            
                            </a>
                          </div>
                        </div>
                      </div>
                 </div>
                 
                </div>
              {% endfor %}
            </div>
            <div class="swiper-button-next">
                <svg width="36" height="12" viewBox="0 0 36 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M27.3121 12C27.8324 10.906 28.3353 9.94872 28.8208 9.12821C29.341 8.30769 29.8439 7.62393 30.3295 7.07692H0V4.92308H30.3295C29.8439 4.34188 29.341 3.64103 28.8208 2.82051C28.3353 2 27.8324 1.05983 27.3121 0H29.1329C31.3179 2.49573 33.6069 4.34188 36 5.53846V6.46154C33.6069 7.62393 31.3179 9.47009 29.1329 12H27.3121Z" fill="#FFF9EB"/>
                </svg>

            </div>
            <div class="swiper-button-prev">
                <svg width="36" height="12" viewBox="0 0 36 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M27.3121 12C27.8324 10.906 28.3353 9.94872 28.8208 9.12821C29.341 8.30769 29.8439 7.62393 30.3295 7.07692H0V4.92308H30.3295C29.8439 4.34188 29.341 3.64103 28.8208 2.82051C28.3353 2 27.8324 1.05983 27.3121 0H29.1329C31.3179 2.49573 33.6069 4.34188 36 5.53846V6.46154C33.6069 7.62393 31.3179 9.47009 29.1329 12H27.3121Z" fill="#FFF9EB"/>
                </svg>

            </div>
          </div>
</div>
<style>
  .text p{
    color:{{block.settings.color_text}} !important;
  }
</style>

{% schema %}
  {
    "name": "section slider",
    "blocks": [
      {
        "name": "slide",
        "type": "item",
        "settings": [
          {
            "type": "image_picker",
            "id": "img",
            "label": "image"
          },
          {
            "type": "color",
            "id": "bg",
            "label": "background color",
            "default": "#4F5E3C"
          },
          {
            "type": "color",
            "id": "color_text",
            "label": "text color",
            "default": "#FFF9EB"
          },
          {
            "type": "text",
            "id": "name",
            "label": "name"
          }, {
            "type": "text",
            "id": "title",
            "label": "title"
          }, {
            "type": "richtext",
            "id": "text",
            "label": "text"
          }, {
            "type": "url",
            "id": "url",
            "label": "url"
          }, {
            "type": "text",
            "id": "btn_name",
            "label": "btn name",
            "default": "Learn More"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": " section slider"
      }
    ]
  }
{% endschema %}