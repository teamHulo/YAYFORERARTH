<div class="section-marquee">
    <div class="section-marquee__wrap">
        <div class="title">
            <h2>
                {{section.settings.title}}
            </h2>
        </div>
        <div class="marquee">
          {% comment %}  
            <div class="div">
                <div class="image" >
                    {%for block in section.blocks%}
                        <img src="{{block.settings.img | img_url: 'master'}}" alt="" style="max-width:{{block.settings.max_width}}px">
                    {% endfor %}
                    {%for block in section.blocks%}
                        <img src="{{block.settings.img | img_url: 'master'}}" alt="" style="max-width:{{block.settings.max_width}}px">
                    {% endfor %}
                    {%for block in section.blocks%}
                        <img src="{{block.settings.img | img_url: 'master'}}" alt="" style="max-width:{{block.settings.max_width}}px">
                    {% endfor %}
                </div>
                <div class="image" >
                    {%for block in section.blocks%}
                        <img src="{{block.settings.img | img_url: 'master'}}" alt="" style="max-width:{{block.settings.max_width}}px">
                    {% endfor %}
                    {%for block in section.blocks%}
                        <img src="{{block.settings.img | img_url: 'master'}}" alt="" style="max-width:{{block.settings.max_width}}px">
                    {% endfor %}
                    {%for block in section.blocks%}
                        <img src="{{block.settings.img | img_url: 'master'}}" alt="" style="max-width:{{block.settings.max_width}}px">
                    {% endfor %}
                </div>
            </div>
          {% endcomment %} 
          <div class="new-inner">
             {%for block in section.blocks%}
                  <img src="{{block.settings.img | img_url: 'master'}}" alt="" style="max-width:{{block.settings.max_width}}px">
              {% endfor %}
          </div>
        </div>
    </div>
</div>


<style>
  .new-inner{
    display: flex;
    gap: clamp(10px,1vw,43px);
    justify-content: space-between;
    max-width: 1440px;
    margin: 0 auto;
    padding: 0 clamp(20px,4.097vw,59px);
  }
  @media(max-width:1100px){
    .new-inner{
      gap: clamp(10px,2vw,43px);
      flex-wrap: wrap;
      justify-content: center;
    }
    @media(max-width:990px){
      .new-inner{
        column-gap: 25px;
        row-gap: 25px;
      }
    }
  }
</style>
{% schema %}
    {
      "name": "section marquee",
      "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "title"
        }
  
      ],
      "blocks": [
        {
          "name": "image",
          "type": "item",
          "settings": [
            {
                "type": "image_picker",
              "id": "img",
              "label": "image"
            },
            {
                "type": "range",
                "id": "max_width",
                "min": 100,
                "max": 500,
                "step": 25,
                "unit": "px",
                "label": "max-width img",
                "default": 100
            }
          ]
        }
      ],
      "presets": [
        {
          "name": "section marquee"
        }
      ]
    }
  {% endschema %}